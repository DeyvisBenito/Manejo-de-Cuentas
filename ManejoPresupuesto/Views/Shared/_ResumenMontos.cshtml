@model ResumenMontosViewModel


        <div class="contenedor-totales mb-3">
            <div>
                <div>
                    <strong>Depositos</strong>
                </div>
                <div class="activo">
                    @formatoMiles(Model.Ingresos)
                </div>
            </div>
            <div>
                <div>
                    <strong>Retiros</strong>
                </div>
                <div class="pasivo">
                    @formatoMiles(Model.Gastos)
                </div>
            </div>
            <div>
                <div>
                    <strong>Total</strong>
                </div>
                <div class="@claseBalance(Model.Total)">
                    @formatoMiles(Model.Total)
                </div>
            </div>

        </div>

@{
    string formatoMiles(decimal balance)
    {
        return Math.Abs(balance).ToString("N");
    }

    string claseBalance(decimal balance)
    {
        return balance >= 0 ? "activo" : "pasivo";
    }
}
