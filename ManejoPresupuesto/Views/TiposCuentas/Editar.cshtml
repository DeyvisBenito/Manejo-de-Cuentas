@model TipoCuenta
@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<div class="row justify-content-center encabezado bg-warning bg-opacity-75">
    <div class="col-6 text-center">
        <h1>Editar Tipo de Cuenta @Model.Nombre</h1>
    </div>
</div>

<div class="intermedio row justify-content-center">
    <br />
</div>



<div class="row justify-content-center bg-success bg-opacity-75 formulario">
    <div class="col-6">
        <form asp-controller="TiposCuentas" asp-action="Editar">
            <div class="mb-3">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Nombre" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Nombre" placeholder="Tipo de Cuenta" />
                <span class="text-danger" asp-validation-for="Nombre"></span>
            </div>
            <div class="mb-3 text-end">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-secondary" asp-action="Index">Regresar</a>
            </div>

        </form>
    </div>
</div>
