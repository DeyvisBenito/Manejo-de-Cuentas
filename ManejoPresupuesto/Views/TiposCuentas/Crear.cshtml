@model TipoCuenta;

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}
<div class="row justify-content-center encabezado bg-warning bg-opacity-75">
    <div class="col-6 text-center">
        <h1>Crear Tipo de Cuenta</h1>
        <h5>
            El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
            Ejemplo: Préstamos, tarjetas de crédito/debito, etc.
        </h5>
    </div>
</div>

<div class="intermedio row justify-content-center">
    <br />
</div>



<div class="row justify-content-center bg-success bg-opacity-75 formulario">
    <div class="col-6">
        <form asp-controller="TiposCuentas" asp-action="Crear">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Nombre" placeholder="Tipo de Cuenta" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3 text-end">
                <button type="submit" class="btn btn-primary">Agregar</button>
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}